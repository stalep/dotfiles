shell:
  program: fish
colors:
  # do gruvbox dark colorscheme with high contrast
  primary:
    background: '0x282828'
    foreground: '0xebdbb2'

  normal:
    black:   '0x282828'
    red:     '0xcc241d'
    green:   '0x98971a'
    yellow:  '0xd79921'
    blue:    '0x458588'
    magenta: '0xb16286'
    cyan:    '0x689d6a'
    white:   '0xa89984'

  bright:
    black:   '0x928374'
    red:     '0xfb4934'
    green:   '0xb8bb26'
    yellow:  '0xfabd2f'
    blue:    '0x83a598'
    magenta: '0xd3869b'
    cyan:    '0x8ec07c'
    white:   '0xebdbb2'
# Font Customization
font:
  normal:
    #family: Fira Code
    family: "MesloLGS NF"
    style: Regular
  bold:
    #family: Fira Code
    family: "MesloLGS NF"
    style: Bold
  italic:
    #family: Fira Code
    family: "MesloLGS NF"
    style: Italic
  size: 9
  offset:
    x: 0
    y: 0
  glyph_offset:
    x: 0
    y: 0
  use_thin_strokes: false
  debug:
    persistent_logging: false
window:
  padding:
   x: 15
   y: 15
  opacity: 0.9
cursor:
  style: Block
  blink: true
  blink_interval: 500
